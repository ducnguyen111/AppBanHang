<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent">
        <ImageView
            android:layout_margin="5dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/image_laptop"
            android:src="@android:drawable/alert_dark_frame"
            />
        <TextView
            android:layout_margin="5dp"
            android:id="@+id/item_laptop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_laptop"
            android:gravity="center"
            android:textSize="20dp"
            android:text="Loại sản phẩm"
            android:textColor="#2196F3" />
        <TextView
            android:layout_margin="5dp"
            android:id="@+id/item_gialaptop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="5dp"
            android:layout_toRightOf="@+id/image_laptop"
            android:layout_below="@id/item_laptop"
            android:gravity="center"
            android:textSize="17dp"
            android:text="Loại sản phẩm"
            android:textColor="#E91E63" />
        <TextView
            android:layout_margin="5dp"
            android:id="@+id/tv_motalaptop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="5dp"
            android:layout_toRightOf="@+id/image_laptop"
            android:gravity="center"
            android:textSize="17dp"
            android:layout_below="@id/item_gialaptop"
            android:text="Loại sản phẩm"
            android:textColor="@color/black" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>